<project
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion> 
  <parent>
    <groupId>org.jboss.tools.locus.plugins</groupId>
    <artifactId>easytesting.fest-assert</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>org.jboss.tools.locus.easytesting.fest-assert</artifactId> 
  <version>1.4.0-SNAPSHOT</version>
  <packaging>eclipse-plugin</packaging>

 <build>
    <plugins>
     <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>get-binaries</id>
            <phase>validate</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <stripVersion>true</stripVersion>
              <outputDirectory>${basedir}</outputDirectory>
              <artifactItems>
                <artifactItem>
                  <groupId>org.easytesting</groupId>
                  <artifactId>fest-assert</artifactId>
                  <version>1.4</version>
                  <outputDirectory>${basedir}/bin</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.easytesting</groupId>
                  <artifactId>fest-assert</artifactId>
                  <version>1.4</version>
                  <classifier>sources</classifier>
                  <outputDirectory>${basedir}/src</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
